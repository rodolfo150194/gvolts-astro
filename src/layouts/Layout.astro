import PromoBanner from "@/components/PromoBanner.astro";
import { getActivePromotions } from "@/services/promotions";

const {
  title = "GVOLTS | Advanced Protection Systems - Fire Alarm & Surveillance Installation",
  description = "Professional fire alarm and surveillance system installation for residential and commercial properties. ISO certified technology with 24/7 monitoring and absolute peace of mind.",
} = Astro.props;

// Get the top active promotion for banner
// const { data: promotions } = await getActivePromotions();
// const topPromo = promotions?.[0];

---

<!doctype html>
<html lang="es" class="min-h-full w-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <!-- <link rel="canonical" href={canonicalURL} /> -->

    <!-- Favicon -->
    <link rel="icon" type="img/logo/logo-minimalista-gvolts.png" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Preload Critical Resources -->
    <link rel="preload" href="/img/gvolts/planing-project.webp" as="image" type="image/webp" fetchpriority="high" />
    <link rel="preload" href="/fonts/RobotoMono-VariableFont_wght.ttf" as="font" type="font/ttf" crossorigin />

    <!-- <meta property="og:url" content={canonicalURL} /> -->
    <meta property="og:locale" content="es_ES" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <!-- <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" /> -->

    <!-- Local font will load with font-display: swap (avoid blocking render) -->

    <!-- Structured Data -->
    <!-- <StructuredData schema={organizationSchema} />
    {schema && <StructuredData schema={schema} />} -->

    <!-- Theme Color -->
    <meta name="theme-color" content="#DC2626" />
    <script defer src="https://gvoltscorp.cloud/script.js" data-website-id="cd87d95a-c346-480d-8239-e3c860370fc0"></script>
    <title>{title}</title>
  </head>
  <body class="min-h-screen w-full" id="background-mask">
    <!-- {topPromo && (
      <PromoBanner
        promotion={topPromo}
        position="top"
        dismissible={true}
      />
    )} -->

    <slot />

    <!-- Global Hash Scroll Handler -->
    <script>
      // Handle hash navigation on page load
      document.addEventListener('DOMContentLoaded', () => {
        // Check if there's a hash in the URL
        const hash = window.location.hash;
        if (hash) {
          // Wait a bit for the page to fully render
          setTimeout(() => {
            const element = document.querySelector(hash);
            if (element) {
              element.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          }, 100);
        }
      });

      // Handle hash changes while on the same page
      window.addEventListener('hashchange', () => {
        const hash = window.location.hash;
        if (hash) {
          const element = document.querySelector(hash);
          if (element) {
            element.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    </script>
  </body>
</html>
