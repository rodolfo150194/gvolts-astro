---
const services = [
  {
    image: "/img/gvolts/extintor.jpg",
    title: "Alarmas de Incendio",
    description:
      "Sistemas avanzados de detección y alerta temprana contra incendios.",
    href: "/services/fire-alarm",
  },
  {
    image: "/img/gvolts/camara-casa.jpg",
    title: "Seguridad",
    description: "Cámaras de alta definición con monitoreo remoto 24/7.",
    href: "/services/security",
  },
  {
    image: "/img/gvolts/instalacion.jpg",
    title: "Electricidad",
    description: "Configuración y gestión centralizada de todos tus sistemas.",
    href: "/services/electricity",
  },
];
---

<section
  class="relative py-20 px-4 md:px-6 lg:px-8 services-section z-0 bg-[url('/img/gvolts/camara-bosque.jpg')] min-h-screen bg-cover bg-center bg-no-repeat bg-fixed w-full max-w-full"
  id="services"
>
  <!-- Overlay background que cubre el 100% de la sección -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-[#3D1F1D]/85 via-[#3D1F1D]/70 to-[#3D1F1D]/60 z-[1] pointer-events-none"
  >
  </div>

  <!-- Línea decorativa superior -->
  <div
    class="absolute top-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-indian-red-500 to-transparent z-[2]"
  >
  </div>

  <div class="max-w-[1400px] mx-auto relative z-10 h-auto">
    <div class="text-center mb-12 md:mb-20 section-header">
      <span
        class="hero-badge inline-flex justify-center items-center gap-2 mt-5 bg-white border border-indian-red-500 px-6 py-2 rounded-full text-indian-red-500 text-sm font-semibold mb-8"
        >Servicios</span
      >
      <h2
        class="section-title font-display text-[clamp(2.5rem,5vw,3rem)] font-extrabold text-white mb-4 leading-tight"
      >
        Protección Integral para tu Seguridad
      </h2>
      <p
        class="section-subtitle font-body text-lg text-white/60 max-w-[600px] mx-auto"
      >
        Soluciones completas de alarmas contra incendios y videovigilancia
      </p>
    </div>

    <div class="flex flex-wrap justify-center gap-6 md:gap-8 services-grid">
      {
        services.map((service, index) => (
            <div class="group bg-gray-50 rounded-[30px] border-2  shadow-xl transition-all duration-700 hover:shadow-2xl hover:shadow-indian-red-500/30 hover:-translate-y-3 hover:scale-[1.02] service-card relative flex flex-col w-full md:w-[calc(50%-1rem)] lg:w-[25%]" data-index={index} style="transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);">

      <div class="relative h-[280px] md:h-[240px] overflow-hidden rounded-t-[30px]">
      <img
          src={service.image}
          alt={service.title}
          class="w-30% object-cover transition-transform duration-700 group-hover:scale-110"
          loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
    </div>

    {/* La HR no es necesaria si el diseño es limpio, pero se puede simular con padding/margin */}

    <div class="p-6 md:p-8 flex flex-col flex-grow">
      <h3 class="font-display text-2xl md:text-3xl font-extrabold text-[#3D1F1D] mb-2 leading-tight"
      >
      {service.title}
      </h3>
      <p class="font-body text-base leading-snug text-[#3D1F1D]/80 mb-6 md:mb-8 flex-grow"
      >
      {service.description}
      </p>

      <div class="mt-auto text-center">
        <a href={service.href} class=" bg-indian-red-600 cursor-pointer text-white px-8 py-3 rounded-xl font-bold uppercase tracking-wider text-sm transition-all duration-300 shadow-lg shadow-indian-red-600/40 hover:bg-indian-red-700 hover:shadow-xs hover:shadow-indian-red-600/50 hover:-translate-y-1 active:translate-y-0 active:shadow-md">
        Ver más detalles
        </a>
      </div>
    </div>
  </div>
  ))
  }
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".service-card");
    cards.forEach((card, index) => {
      gsap.from(card, {
        scrollTrigger: {
          trigger: card,
          start: "top 85%",
          toggleActions: "play none none reverse",
        },
        y: 80,
        duration: 0.8,
        delay: index * 0.1,
        ease: "power3.out",
      });
    });
  });
</script>
