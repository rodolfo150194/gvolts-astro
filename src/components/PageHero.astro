---
import Icon from "@/components/Icon.astro";

interface Props {
  title: string;
  highlightedTitle?: string;
  description: string;
  badge: string;
  backgroundImage?: string;
  icon?: string;
}

const { title, highlightedTitle, description, badge, backgroundImage, icon } =
  Astro.props;
---

{
  backgroundImage ? (
    <section class="relative h-[60vh] min-h-90 flex items-center justify-center mt-5 mx-5 rounded-3xl">
      <div class="absolute inset-0 z-0">
        <img
          src={backgroundImage}
          alt={title}
          class="w-full h-full object-cover rounded-3xl"
          loading="eager"
          fetchpriority="high"
        />
        <div class="absolute inset-0 bg-slate-900/80 rounded-3xl" />
      </div>

      <div class="z-10 container mx-auto px-4 py-12 text-center text-white">
        <span class="hero-badge inline-flex items-center gap-2 bg-white/10 border border-white/20 px-6 py-2 rounded-full text-white text-sm font-semibold mb-8 backdrop-blur-md">
          {icon && <Icon name={icon} size={16} />}
          {badge}
        </span>
        <h1 class="text-5xl md:text-7xl font-bold font-display leading-tight">
          {title}{" "}
          {highlightedTitle && (
            <span class="text-indian-red-500">{highlightedTitle}</span>
          )}
        </h1>
        <p class="text-lg md:text-xl text-slate-300 max-w-2xl mx-auto leading-relaxed">
          {description}
        </p>
      </div>
    </section>
  ) : (
    <section class="bg-slate-900 py-12 text-center text-white pt-20 md:pt-30">
      <div class="container mx-auto px-4">
        <span class="inline-flex items-center gap-2 py-1 px-3 rounded-full bg-indian-red-500/20 border border-indian-red-500 text-indian-red-400 text-sm font-semibold mb-6">
          {icon && <Icon name={icon} size={16} />}
          {badge}
        </span>
        <h1 class="text-5xl md:text-6xl font-bold font-display mb-6">
          {title}{" "}
          {highlightedTitle && (
            <span class="text-indian-red-500">{highlightedTitle}</span>
          )}
        </h1>
        <p class="text-lg text-slate-300 max-w-2xl mx-auto">{description}</p>
      </div>
    </section>
  )
}
