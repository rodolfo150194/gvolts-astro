---
interface Props {
  title: string;
  highlightedTitle?: string;
  description: string;
  badge: string;
  backgroundImage?: string;
}

const { title, highlightedTitle, description, badge, backgroundImage } =
  Astro.props;
---

{
  backgroundImage ? (
    <section class="relative h-[60vh] min-h-[500px] flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img
          src={backgroundImage}
          alt={title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-slate-900/80" />
      </div>

      <div class="relative z-10 container mx-auto px-4 text-center text-white">
        <span class="inline-block py-1 px-3 rounded-full bg-indian-red-500/20 border border-indian-red-500 text-indian-red-400 text-sm font-semibold mb-6">
          {badge}
        </span>
        <h1 class="text-5xl md:text-7xl font-bold font-display mb-6 leading-tight">
          {title}{" "}
          {highlightedTitle && (
            <span class="text-indian-red-500">{highlightedTitle}</span>
          )}
        </h1>
        <p class="text-lg md:text-xl text-slate-300 max-w-2xl mx-auto leading-relaxed">
          {description}
        </p>
      </div>
    </section>
  ) : (
    <section class="bg-slate-900 py-20 text-center text-white">
      <div class="container mx-auto px-4">
        <span class="inline-block py-1 px-3 rounded-full bg-indian-red-500/20 border border-indian-red-500 text-indian-red-400 text-sm font-semibold mb-6">
          {badge}
        </span>
        <h1 class="text-5xl md:text-6xl font-bold font-display mb-6">
          {title}{" "}
          {highlightedTitle && (
            <span class="text-indian-red-500">{highlightedTitle}</span>
          )}
        </h1>
        <p class="text-lg text-slate-300 max-w-2xl mx-auto">{description}</p>
      </div>
    </section>
  )
}
