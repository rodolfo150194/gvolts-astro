---
interface Props {
  name: string;
  size?: string | number;
  class?: string;
  width?: string | number;
  height?: string | number;
}

const {
  name,
  size = "24",
  class: className = "",
  width,
  height
} = Astro.props;

const iconWidth = width || size;
const iconHeight = height || size;
---

<svg
  class={`icon ${className}`}
  width={iconWidth}
  height={iconHeight}
  aria-hidden="true"
>
  <use href={`/sprite.svg#${name}`}></use>
</svg>

<style>
  .icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    vertical-align: middle;
    fill: currentColor;
    color: inherit;
    flex-shrink: 0;
  }
</style>
