---
const partners = [
  {
    name: "Partner 1",
    logo: "/img/gvolts/logo-1.png",
    url: "https://example.com",
  },
  {
    name: "Partner 2",
    logo: "/img/gvolts/logo-2.png",
    url: "https://example.com",
  },
  {
    name: "Partner 3",
    logo: "/img/gvolts/logo-3.png",
    url: "https://example.com",
  },
  {
    name: "Partner 4",
    logo: "/img/gvolts/logo-4.png",
    url: "https://example.com",
  },
  {
    name: "Partner 5",
    logo: "/img/gvolts/logo-5.png",
    url: "https://example.com",
  },
   {
    name: "Partner 6",
    logo: "/img/gvolts/logo-1.png",
    url: "https://example.com",
  },
];

// Duplicate partners for infinite scroll effect
const allPartners = [...partners, ...partners];
---

<section class="py-16 overflow-hidden bg-white">

  <div class="relative w-full overflow-hidden">
    <!-- Gradient Masks -->
    <div
      class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-slate-50 to-transparent z-10"
    >
    </div>
    <div
      class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-slate-50 to-transparent z-10"
    >
    </div>

    <!-- Slider Track -->
    <div class="flex w-[200%] animate-scroll hover:pause">
      {
        allPartners.map((partner, index) => (
          <div class="flex-1 flex justify-center items-center min-w-[150px] md:min-w-[200px] px-8">
            <a
              href={partner.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative block transition-all duration-300 transform hover:scale-110"
              title={`Visitar ${partner.name}`}
            >
              <!-- Placeholder for logo if image is missing, otherwise use img -->
              <div class="h-12 md:h-16 w-auto grayscale group-hover:grayscale-0 transition-all duration-300 opacity-60 group-hover:opacity-100 flex items-center justify-center text-slate-400 font-bold text-xl group-hover:text-indian-red-500">
                 {/* Using text as placeholder since we might not have images yet. 
                     If images exist, replace this div content with:
                     <img src={partner.logo} alt={partner.name} class="h-full w-auto object-contain" />
                 */}
                 <span class="whitespace-nowrap">{partner.name}</span>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  .hover\:pause:hover {
    animation-play-state: paused;
  }
</style>
