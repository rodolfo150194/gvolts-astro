<section class="hero" id="home">
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="hero-title">
        <span class="title-line">Slogan</span>
        <span class="title-line highlight">Texto descriptivo</span>
      </h1>
      <button class="cta-button">
        <span class="icon">&#9654;</span>
        Call to action
      </button>
    </div>
  </div>
  <div class="hero-background">
    <div class="overlay"></div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-top: 80px;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #DF643F 0%, #A73728 100%);
    z-index: -1;
  }

  .hero-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('/img/gvolts/women-monitoring.png');
    background-size: cover;
    background-position: center;
    opacity: 0.15;
    mix-blend-mode: overlay;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 50%, rgba(223, 100, 63, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 70% 50%, rgba(167, 55, 40, 0.3) 0%, transparent 50%);
  }

  .hero-content {
    max-width: 1400px;
    width: 100%;
    padding: 4rem 2rem;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-text {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    color: white;
    margin-bottom: 3rem;
    line-height: 1.1;
    letter-spacing: -0.03em;
  }

  .title-line {
    display: block;
  }

  .title-line.highlight {
    background: linear-gradient(90deg, #FFE5DC 0%, #FFFFFF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .cta-button {
    background: white;
    color: var(--color-dark);
    border: none;
    padding: 1.25rem 3rem;
    border-radius: 50px;
    font-family: var(--font-body);
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.4s ease;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
  }

  .cta-button .icon {
    font-size: 0.9rem;
    transition: transform 0.3s ease;
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
  }

  .cta-button:hover .icon {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .hero {
      margin-top: 70px;
    }

    .hero-content {
      padding: 3rem 1.5rem;
    }

    .cta-button {
      padding: 1rem 2rem;
      font-size: 1rem;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';

  document.addEventListener('DOMContentLoaded', () => {
    const tl = gsap.timeline({ defaults: { ease: 'power3.out' } });

    tl.from('.hero-title .title-line', {
      y: 100,
      opacity: 0,
      duration: 1,
      stagger: 0.2
    })
    .from('.cta-button', {
      scale: 0.8,
      opacity: 0,
      duration: 0.6,
      ease: 'back.out(1.7)'
    }, '-=0.3');

    gsap.to('.overlay', {
      rotate: 360,
      duration: 60,
      repeat: -1,
      ease: 'none'
    });
  });
</script>
