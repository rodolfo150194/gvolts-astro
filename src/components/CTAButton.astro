---
import Icon from "@/components/Icon.astro";

interface Props {
  text: string;
  href?: string;
  variant?: "primary" | "secondary";
  icon?: string;
  size?: string;
  className?: string;
}

const {
  text,
  href = "/contact",
  variant = "primary",
  icon = "",
  size = "20",
  className = "",
} = Astro.props;

const baseClasses =
  "inline-flex items-center gap-3 px-8 py-3.5 rounded-lg font-bold cursor-pointer transition-all duration-300 hover:-translate-y-1";

const variantClasses = {
  primary:
    "bg-indian-red-500 text-white border-0 shadow-[0_10px_30px_rgba(205,92,92,0.4)] hover:shadow-[0_15px_40px_rgba(205,92,92,0.5)] hover:bg-indian-red-600",
  secondary:
    "bg-white/10 text-white border-2 border-white/20 backdrop-blur-[10px] hover:bg-white/15 hover:border-white/30",
};
---

<a
  href={href}
  class:list={[baseClasses, variantClasses[variant], className, "cta-button"]}
>
  <span>{text}</span>
  {icon && (
    <div class="cta-arrow transition-transform duration-300 group-hover:translate-x-1">
      <Icon name={icon} size={size} />
    </div>
  )}
</a>

<style>
  .cta-button:hover .cta-arrow {
    transform: translateX(4px);
  }
</style>
