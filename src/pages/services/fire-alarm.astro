---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Icon from "@/components/Icon.astro";
import PageHero from "@components/PageHero.astro";
// Import service content
import serviceContent from "@/data/fire-alarm-content.json";
import ScrollToTop from "@components/ScrollToTop.astro";
const content = serviceContent.servicesPages.fireAlarm;
---

<Layout title="Alarmas de Incendio | GVolts">
  <Header />
  <PageHero
      title={content.hero.title.main}
      highlightedTitle={content.hero.title.highlight}
      description={content.hero.description}
      badge={content.hero.badge}
      backgroundImage={content.hero.image}
      icon={content.hero.icon}
    />
  <main class="pt-10">
    <section class="">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
      
          <!-- Highlights Grid -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12 highlights-grid">
            {content.introduction.highlights.map((highlight, index) => (
              <div class="highlight-card bg-slate-50 p-6 rounded-2xl border-2 border-indian-red-100 hover:border-indian-red-500 transition-all  hover:-translate-y-2">
                <div class="w-12 h-12 bg-indian-red-500 text-white rounded-xl flex items-center justify-center mb-4">
                  <Icon name={highlight.icon} size="24" />
                </div>
                <p class="text-slate-700 font-medium">{highlight.text}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="features-title font-display text-5xl md:text-6xl font-bold text-slate-900 mb-4">
              {content.features.title}
            </h2>
            <p class="text-xl text-slate-600">{content.features.description}</p>
          </div>

          <!-- Features Grid -->
          <div class="space-y-24 features-container">
            {content.features.items.map((feature, index) => (
              <div class={`feature-item grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
                <div class={`${index % 2 === 1 ? 'lg:order-2' : ''}`}>
                  <div class="inline-block bg-indian-red-500 text-white text-2xl font-bold px-4 py-2 rounded-lg mb-4">
                    {feature.number}
                  </div>
                  <h3 class="font-display text-3xl md:text-4xl font-bold text-slate-900 mb-4">
                    {feature.title}
                  </h3>
                  <p class="text-lg text-slate-600 mb-6 leading-relaxed">
                    {feature.description}
                  </p>
                  <ul class="space-y-3 mb-6">
                    {feature.benefits.map((benefit) => (
                      <li class="flex items-start gap-3">
                        <div class="w-6 h-6 bg-indian-red-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                          <Icon name="check" size="14" class="text-white" />
                        </div>
                        <span class="text-slate-700">{benefit}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                <div class={`relative ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
                  <div class="absolute -inset-4 bg-indian-red-500/10 rounded-3xl transform rotate-3"></div>
                  <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                    <img
                      src={feature.image}
                      alt={feature.title}
                      class="w-full object-cover aspect-[4/3] shadow-lg"
                    />
                    <div class="absolute inset-0 bg-slate-900/40"></div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Process Timeline -->
    <section class="py-20 relative overflow-hidden">
      <!-- Decorative background -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-indian-red-100 rounded-full blur-[100px] opacity-50"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="process-title font-display text-5xl md:text-6xl font-bold text-slate-900 mb-4">
              {content.process.title}
            </h2>
            <p class="text-xl text-slate-600">{content.process.subtitle}</p>
          </div>

          <!-- Timeline -->
          <div class="relative timeline-container">
            <!-- Connecting line (desktop) -->
            <div class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-indian-red-200 via-indian-red-500 to-indian-red-200 -translate-x-1/2 timeline-line"></div>

            <div class="space-y-12">
              {content.process.steps.map((step, index) => (
                <div class={`timeline-step flex flex-col lg:flex-row gap-8 items-center ${index % 2 === 0 ? '' : 'lg:flex-row-reverse'}`}>
                  <!-- Content -->
                  <div class={`flex-1 ${index % 2 === 0 ? 'lg:text-right' : 'lg:text-left'}`}>
                    <div class="bg-white p-8 rounded-2xl border-2 border-indian-red-100 hover:border-indian-red-500 transition-all shadow-lg hover:shadow-xl">
                      <div class="flex items-center gap-3 mb-4">
                        
                        <div>
                          <h3 class="text-2xl font-bold text-slate-900">{step.title}</h3>
                          <span class="text-sm text-indian-red-500 font-semibold">{step.duration}</span>
                        </div>
                      </div>
                      <p class="text-slate-600 mb-4">{step.description}</p>
                      <div class="bg-indian-red-50 p-3 rounded-lg">
                        <p class="text-sm text-slate-700"><strong>Entregable:</strong> {step.deliverable}</p>
                      </div>
                    </div>
                  </div>

                  <!-- Center dot -->
                  <div class="hidden lg:flex flex-shrink-0 w-16 h-16 bg-indian-red-500 rounded-full items-center justify-center shadow-lg border-4 border-white relative z-10">
                    <span class="text-white font-bold text-xl">{step.number}</span>
                  </div>

                  <!-- Spacer -->
                  <div class="flex-1 hidden lg:block"></div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-slate-900 text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-50">
        <div
          class="absolute inset-0"
          style="background-image: linear-gradient(rgba(255,255,255,.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.05) 1px, transparent 1px); background-size: 50px 50px;"
        />
      </div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="cta-title font-display text-4xl md:text-6xl font-bold mb-6">
            {content.cta.title}
          </h2>
          <p class="cta-description text-xl text-slate-300 mb-12 max-w-2xl mx-auto">
            {content.cta.description}
          </p>

          <div class="flex flex-wrap justify-center gap-4 mb-12">
            <a
              href={content.cta.primary.href}
              class="bg-indian-red-500 text-white px-8 py-4 rounded-xl font-bold hover:bg-indian-red-600 transition-all transform hover:-translate-y-1 shadow-lg shadow-indian-red-500/30"
            >
              {content.cta.primary.label}
            </a>
            <a
              href={content.cta.secondary.href}
              class="bg-white/10 text-white px-8 py-4 rounded-xl font-bold hover:bg-white/20 transition-all backdrop-blur-sm border border-white/20"
            >
              {content.cta.secondary.label}
            </a>
          </div>

          <!-- Guarantees -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {content.cta.guarantees.map((guarantee) => (
              <div class="flex items-center justify-center gap-2 text-slate-300">
                <Icon name="check-circle" size="20" class="text-indian-red-400" />
                <span class="text-sm">{guarantee}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <ScrollToTop />
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Hero animations
    gsap.from(".hero-badge", {
      opacity: 0,
      y: -20,
      duration: 0.8,
      ease: "power3.out"
    });

    gsap.from(".hero-title", {
      opacity: 0,
      y: 30,
      duration: 1,
      delay: 0.2,
      ease: "power3.out"
    });

    gsap.from(".hero-description", {
      opacity: 0,
      y: 20,
      duration: 0.8,
      delay: 0.4,
      ease: "power3.out"
    });

    gsap.from(".stat-item", {
      opacity: 0,
      scale: 0.5,
      duration: 0.6,
      stagger: 0.1,
      delay: 0.6,
      ease: "back.out(1.7)"
    });

    // Features animations
    ScrollTrigger.batch(".feature-item", {
      onEnter: (elements) => {
        gsap.from(elements, {
          opacity: 0,
          y: 80,
          duration: 1,
          ease: "power3.out"
        });
      },
      start: "top 75%"
    });

    // Timeline Line Animation
    gsap.fromTo(".timeline-line", 
      { scaleY: 0 },
      {
        scaleY: 1,
        transformOrigin: "top center",
        ease: "none",
        scrollTrigger: {
          trigger: ".timeline-container",
          start: "top 60%",
          end: "bottom 60%",
          scrub: 1
        }
      }
    );

    // Timeline animations
    ScrollTrigger.batch(".timeline-step", {
      onEnter: (elements) => {
        gsap.from(elements, {
          opacity: 0,
          x: (index, target) => {
            const isEven = Array.from(target.parentElement.children).indexOf(target) % 2 === 0;
            return isEven ? -100 : 100;
          },
          duration: 0.8,
          stagger: 0.2,
          ease: "power3.out"
        });
      },
      start: "top 80%"
    });

    // Applications grid
    ScrollTrigger.batch(".application-card", {
      onEnter: (elements) => {
        gsap.from(elements, {
          opacity: 0,
          scale: 0.8,
          stagger: 0.1,
          duration: 0.6,
          ease: "back.out(1.7)"
        });
      },
      start: "top 80%"
    });

    // Benefits grid
    ScrollTrigger.batch(".benefit-card", {
      onEnter: (elements) => {
        gsap.from(elements, {
          opacity: 0,
          y: 60,
          stagger: 0.1,
          duration: 0.8,
          ease: "power3.out"
        });
      },
      start: "top 80%"
    });
  });
</script>
