---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Icon from "@/components/Icon.astro";
import PageHero from "@components/PageHero.astro";
import Timeline from "@/components/Timeline.astro";
import ScrollToTop from "@components/ScrollToTop.astro";
// Import service content
import serviceContent from "@/data/electricity-content.json";
const content = serviceContent.servicesPages.electricity;
---

<Layout title="Electricidad | GVolts">
  <Header />
  <PageHero
    title={content.hero.title.main}
    highlightedTitle={content.hero.title.highlight}
    description={content.hero.description}
    badge={content.hero.badge}
    backgroundImage="/img/gvolts/electric.jpg"
    icon="thunder"
  />

  <main class="pt-10">
    <section class="relative overflow-hidden">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <!-- Highlights Grid with Electric Theme -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12 highlights-grid">
            {content.introduction.highlights.map((highlight: { icon: string; text: string }, index: number) => (
              <div class="highlight-card group relative bg-linear-to-br from-slate-50 to-slate-100 p-6 rounded-2xl border-2 border-indian-red-100 hover:border-indian-red-500 transition-all duration-500 hover:-translate-y-2 overflow-hidden">
                <!-- Electric pulse background effect -->
                <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                  <div class="absolute top-0 left-0 w-full h-1"></div>
                </div>
                <div class="relative z-10">
                  <div class="w-14 h-14 bg-linear-to-br from-indian-red-500 to-indian-red-600 text-white rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 shadow-lg shadow-indian-red-500/30">
                    <Icon name={highlight.icon} size="28" class="text-white" />
                  </div>
                  <p class="text-slate-700 font-medium text-lg leading-relaxed">{highlight.text}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section - Industrial Blueprint Aesthetic -->
    <section class="py-24 relative">
      <!-- Technical grid background -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(#CD5C5C 1px, transparent 1px), linear-gradient(90deg, #CD5C5C 1px, transparent 1px); background-size: 40px 40px;"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="services-title font-display text-5xl md:text-6xl font-bold text-slate-900 mb-4">
              {content.services.title}
            </h2>
          </div>

          <!-- Residential Services -->
          <div class="mb-20">
            <div class="flex items-center gap-4 mb-10 relative">
              <!-- Decorative circuit lines -->
                  <div class="absolute top-0 right-0 w-40 h-40 opacity-50">
                    <svg viewBox="0 0 100 100" fill="none" stroke="currentColor" class="text-indian-red-500">
                      <path d="M10 10 L90 10 L90 50" stroke-width="4" />
                      <circle cx="90" cy="50" r="4" fill="currentColor" />
                      <path d="M50 10 L50 90" stroke-width="4" />
                      <circle cx="50" cy="90" r="4" fill="currentColor" />
                    </svg>
                  </div>
              <div class="w-16 h-16 bg-indian-red-500 rounded-2xl text-white flex items-center justify-center shadow-lg shadow-indian-red-500/30">
                <Icon name="home-1" size="32" />
              </div>
              <div>
                <h3 class="text-3xl font-bold text-slate-900">{content.services.residential.name}</h3>
                <p class="text-slate-600">{content.services.residential.tagline}</p>
              </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              {content.services.residential.items.map((service: { title: string; description: string; includes: string[]; ideal_for: string[] }, index: number) => (
                <div class="service-card group bg-white rounded-3xl p-8 border-2 border-slate-100 transition-all duration-500 hover:shadow-2xl shadow relative overflow-hidden">
                  <!-- Number indicator -->
                  <div class="absolute -top-4 -right-4 w-24 h-24 bg-indian-red-50 rounded-full flex items-end justify-start pb-6 pl-6 opacity-80 group-hover:opacity-100 transition-opacity">
                    <span class="text-4xl font-black text-indian-red-500">0{index + 1}</span>
                  </div>

                  <div class="relative z-10">
                    <h4 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-indian-red-600 transition-colors">{service.title}</h4>
                    <p class="text-slate-600 mb-6 leading-relaxed">{service.description}</p>

                    <div class="space-y-4">
                      <div class="bg-slate-50 rounded-xl p-4 border-2 hover:shadow-2xl">
                        <h5 class="text-sm font-bold text-slate-800 uppercase tracking-wide mb-3">Incluye:</h5>
                        <ul class="space-y-2">
                          {service.includes.map((item: string) => (
                            <li class="flex items-start gap-2 text-sm text-slate-700">
                              <Icon name="check" size="16" class="text-indian-red-500 mt-0.5 flex-shrink-0" />
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>

                      <div class="bg-indian-red-200 rounded-xl p-4 border-2 hover:shadow-2xl">
                        <h5 class="text-sm font-bold text-slate-800 uppercase tracking-wide mb-3">Ideal para:</h5>
                        <div class="flex flex-wrap gap-2">
                          {service.ideal_for.slice(0, 3).map((item: string) => (
                            <span class="inline-block bg-white px-3 py-1 rounded-full text-xs text-slate-700 border border-slate-200">{item}</span>
                          ))}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Commercial Services -->
          <div>
            <div class="flex items-center gap-4 mb-10">
              <div class="w-16 h-16 text-white bg-slate-900 rounded-2xl flex items-center justify-center shadow-lg">
                <Icon name="city" size="32" />
              </div>
              <div>
                <h3 class="text-3xl font-bold text-slate-900">{content.services.commercial.name}</h3>
                <p class="text-slate-600">{content.services.commercial.tagline}</p>
              </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              {content.services.commercial.items.map((service: { title: string; description: string; includes: string[]; ideal_for: string[] }, index: number) => (
                <div class="service-card group bg-gradient-to-br from-slate-900 to-slate-800 rounded-3xl p-8 transition-all duration-500 hover:shadow-2xl hover:shadow-indian-red-500/20 relative overflow-hidden">
                  <!-- Decorative circuit lines -->
                  <div class="absolute top-0 right-0 w-40 h-40 opacity-10">
                    <svg viewBox="0 0 100 100" fill="none" stroke="currentColor" class="text-lemon-chiffon-400">
                      <path d="M10 10 L90 10 L90 50" stroke-width="2" />
                      <circle cx="90" cy="50" r="4" fill="currentColor" />
                      <path d="M50 10 L50 90" stroke-width="2" />
                      <circle cx="50" cy="90" r="4" fill="currentColor" />
                    </svg>
                  </div>

                  <div class="relative z-10">
                    <h4 class="text-2xl font-bold text-white mb-3">{service.title}</h4>
                    <p class="text-slate-400 mb-6 leading-relaxed">{service.description}</p>
                    <div class="space-y-4">
                      <div class="bg-white/5 backdrop-blur border-2 rounded-xl p-4 border-white/10">
                        <h5 class="text-sm font-bold text-lemon-chiffon-400 uppercase tracking-wide mb-3">Incluye:</h5>
                        <ul class="space-y-2">
                          {service.includes.map((item: string) => (
                            <li class="flex items-start gap-2 text-sm text-slate-300">
                              <Icon name="check" size="16" class="text-lemon-chiffon-400 mt-0.5 flex-shrink-0" />
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>

                      <div class="flex flex-wrap gap-2">
                        {service.ideal_for.slice(0, 2).map((item: string) => (
                          <span class="inline-block bg-lemon-chiffon-400/20 text-lemon-chiffon-300 px-3 py-1 rounded-full text-xs border border-indian-red-500/30">{item}</span>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Timeline -->
    <Timeline
      title={content.process.title}
      subtitle={content.process.subtitle}
      steps={content.process.steps}
    />

    <!-- CTA Section - High Energy Design -->
    <section class="py-24 bg-slate-900 text-white relative overflow-hidden">

      <!-- Grid pattern -->
      <div class="absolute inset-0 opacity-5">
        <div style="background-image: linear-gradient(rgba(255,255,255,.5) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.5) 1px, transparent 1px); background-size: 50px 50px; height: 100%; width: 100%;"></div>
      </div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          

          <h2 class="cta-title font-display text-4xl md:text-6xl font-bold mb-6">
            {content.cta.title}
          </h2>
          <p class="cta-description text-xl text-slate-400 mb-12 max-w-2xl mx-auto">
            {content.cta.description}
          </p>

          <div class="flex flex-wrap justify-center gap-4 mb-12">
            <a
              href={content.cta.primary.href}
              class="group relative inline-flex items-center gap-2 bg-gradient-to-r from-indian-red-500 to-indian-red-600 text-white px-8 py-4 rounded-xl font-bold overflow-hidden transition-all transform hover:-translate-y-1"
            >
              <span class="relative z-10">{content.cta.primary.label}</span>
              <Icon name="arrow-right" size="20" class="relative z-10 group-hover:translate-x-1 transition-transform" />
              <div class="absolute inset-0 bg-gradient-to-r from-indian-red-600 to-indian-red-700 opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </a>
            <a
              href={content.cta.secondary.href}
              class="inline-flex items-center gap-2 bg-white/10 text-white px-8 py-4 rounded-xl font-bold hover:bg-white/20 transition-all backdrop-blur-sm border border-white/20"
            >
              <Icon name="phone" size="20" />
              <span>{content.cta.secondary.label}</span>
            </a>
          </div>

          <!-- Guarantees -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {content.cta.guarantees.map((guarantee: string) => (
              <div class="flex items-center justify-center gap-2 text-slate-400">
                <Icon name="check-circle" size="20" class="text-lemon-chiffon-400" />
                <span class="text-sm">{guarantee}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <ScrollToTop />
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Safety cards
    ScrollTrigger.batch(".safety-card", {
      onEnter: (elements) => {
        gsap.from(elements, {
          opacity: 0,
          y: 50,
          scale: 0.9,
          stagger: 0.1,
          duration: 0.6,
          ease: "back.out(1.7)"
        });
      },
      start: "top 85%"
    });

    // Benefits grid
    ScrollTrigger.batch(".benefit-card", {
      onEnter: (elements) => {
        gsap.from(elements, {
          opacity: 0,
          y: 60,
          stagger: 0.1,
          duration: 0.8,
          ease: "power3.out"
        });
      },
      start: "top 80%"
    });

    // CTA section elements
    gsap.from(".cta-title", {
      opacity: 0,
      y: 40,
      duration: 1,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".cta-title",
        start: "top 80%"
      }
    });

    gsap.from(".cta-description", {
      opacity: 0,
      y: 30,
      duration: 0.8,
      delay: 0.2,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".cta-description",
        start: "top 85%"
      }
    });

    // Section titles with split effect
    const sectionTitles = [".services-title", ".specialties-title", ".process-title", ".safety-title", ".benefits-title"];
    sectionTitles.forEach((selector) => {
      gsap.from(selector, {
        opacity: 0,
        y: 50,
        duration: 1,
        ease: "power3.out",
        scrollTrigger: {
          trigger: selector,
          start: "top 80%"
        }
      });
    });
  });
</script>
